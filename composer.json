{
    "name": "dbp/relay-mono-bundle",
    "description": "A payment bundle for the Relay API gateway",
    "type": "symfony-bundle",
    "license": "AGPL-3.0-or-later",
    "require": {
        "php": ">=8.2",
        "ext-json": "*",
        "api-platform/core": "^3.4 || ^4.1",
        "dbp/relay-core-bundle": "^0.1.186",
        "doctrine/dbal": "^3.8 || ^4.0",
        "doctrine/doctrine-bundle": "^2.12",
        "doctrine/doctrine-migrations-bundle": "^3.3",
        "doctrine/migrations": "^3.5",
        "doctrine/orm": "^2.18 || ^3.2",
        "psr/log": "^1.1.4 || ^2.0.0 || ^3.0.0",
        "symfony/config": "^7.0",
        "symfony/console": "^7.0",
        "symfony/dependency-injection": "^7.0",
        "symfony/framework-bundle": "^7.0",
        "symfony/http-foundation": "^7.0",
        "symfony/http-kernel": "^7.0",
        "symfony/lock": "^7.0",
        "symfony/mailer": "^7.0",
        "symfony/mime": "^7.0",
        "symfony/translation": "^7.0",
        "symfony/translation-contracts": "^2.5 || ^3",
        "symfony/uid": "^7.0",
        "twig/twig": "^3.8"
    },
    "require-dev": {
        "captainhook/captainhook": "^5.21",
        "friendsofphp/php-cs-fixer": "^3.50",
        "phpstan/phpstan": "^2.0.0",
        "phpstan/phpstan-phpunit": "^2.0.0",
        "phpstan/phpstan-symfony": "^2.0.0",
        "phpunit/phpunit": "^10.1",
        "symfony/browser-kit": "^7.0",
        "symfony/error-handler": "^7.0",
        "symfony/http-client": "^7.0",
        "symfony/monolog-bridge": "^7.0",
        "symfony/monolog-bundle": "^3.10",
        "symfony/phpunit-bridge": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Dbp\\Relay\\MonoBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dbp\\Relay\\MonoBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.2"
        }
    },
    "scripts": {
        "post-autoload-dump": "vendor/bin/captainhook install -f -s",
        "test": [
            "@php vendor/bin/phpunit"
        ],
        "phpstan": [
            "@php vendor/bin/phpstan analyze --ansi"
        ],
        "lint": [
            "@composer run cs",
            "@composer run phpstan"
        ],
        "cs-fix": [
            "@php vendor/bin/php-cs-fixer --ansi fix"
        ],
        "cs": [
            "@php vendor/bin/php-cs-fixer --ansi fix --dry-run --diff"
        ],
        "coverage": [
            "@php -dxdebug.mode=coverage vendor/bin/phpunit --coverage-html _coverage"
        ]
    }
}
