{
    "name": "dbp/relay-mono-bundle",
    "description": "A payment bundle for the Relay API gateway",
    "type": "symfony-bundle",
    "license": "AGPL-3.0-or-later",
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "api-platform/core": "^2.7.11",
        "dbp/relay-core-bundle": "^0.1.125",
        "symfony/framework-bundle": "^5.4",
        "symfony/mailer": "^5.4",
        "doctrine/doctrine-bundle": "^2.11",
        "doctrine/doctrine-migrations-bundle": "^3.3",
        "symfony/uid": "^5.4",
        "doctrine/migrations": "^3.5",
        "twig/twig": "^3.8",
        "symfony/http-kernel": "^5.4",
        "symfony/http-foundation": "^5.4",
        "symfony/lock": "^5.4",
        "psr/log": "^1.1.4 || ^2.0.0 || ^3.0.0",
        "doctrine/orm": "^2.18",
        "symfony/mime": "^5.4",
        "symfony/console": "^5.4",
        "symfony/config": "^5.4",
        "symfony/dependency-injection": "^5.4",
        "doctrine/dbal": "^3.8",
        "symfony/translation-contracts": "^2.5",
        "symfony/translation": "^5.4"
    },
    "require-dev": {
        "brainmaestro/composer-git-hooks": "^2.8.5",
        "friendsofphp/php-cs-fixer": "^3.50",
        "phpstan/phpstan": "^1.10.59",
        "phpstan/phpstan-phpunit": "^1.3.16",
        "phpstan/phpstan-symfony": "^1.3.7",
        "phpunit/phpunit": "^10.0.0",
        "symfony/browser-kit": "^5.4.35",
        "symfony/http-client": "^5.4.36",
        "symfony/monolog-bundle": "^3.10",
        "symfony/phpunit-bridge": "^5.4.36",
        "vimeo/psalm": "^5.22.2",
        "symfony/error-handler":"^5.4.36",
        "symfony/monolog-bridge":"^5.4.35"
    },
    "autoload": {
        "psr-4": {
            "Dbp\\Relay\\MonoBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dbp\\Relay\\MonoBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.1"
        }
    },
    "extra": {
        "hooks": {
            "pre-commit": [
                "composer lint"
            ]
        }
    },
    "scripts": {
        "post-install-cmd": "cghooks add --ignore-lock",
        "post-update-cmd": "cghooks update",
        "test": [
            "@php vendor/bin/phpunit"
        ],
        "phpstan": [
            "@php vendor/bin/phpstan analyze --ansi"
        ],
        "psalm": [
            "@php vendor/bin/psalm"
        ],
        "lint": [
            "@composer run cs",
            "@composer run phpstan",
            "@composer run psalm"
        ],
        "cs-fix": [
            "@php vendor/bin/php-cs-fixer --ansi fix"
        ],
        "cs": [
            "@php vendor/bin/php-cs-fixer --ansi fix --dry-run --diff"
        ],
        "coverage": [
            "@php -dxdebug.mode=coverage vendor/bin/phpunit --coverage-html _coverage"
        ]
    }
}
